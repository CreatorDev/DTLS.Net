<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net47;net471;net472;net48;netstandard2.1</TargetFrameworks>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageId>DTLS2.Net</PackageId>
    <Authors>kmiller77</Authors>
    <Product>DTLS2.Net</Product>
    <Description>This package was built on top of CreatorDev's DTLS.Net - https://github.com/CreatorDev/DTLS.Net</Description>
    <PackageTags>DTLS, RSA, PSK, X509Certificate2</PackageTags>
    <PackageProjectUrl>https://github.com/kmiller77/DTLS.Net</PackageProjectUrl>
    <RepositoryUrl>https://github.com/kmiller77/DTLS.Net</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="HandshakeMessages\KeyExchange\" />
    <Folder Include="Records\" />
    <Folder Include="PSK\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BouncyCastle.NetCore" Version="1.8.5" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.1' ">
    <PackageReference targetframework="netstandard2.1" Include="System.Security.Cryptography.Cng" Version="4.6.0" />
  </ItemGroup>

</Project>
